{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}} - Foodfy</title>
    <link rel="stylesheet" href="/stylefoodfy.css">
{% endblock head %}



{% block content %}
    <main>
        <section class="recipesPage">
            <img src="{{item.image}}" alt = "imagem ilustrativa da receita: {{item.title}}">
            <div class="cooker-info">
                <div class="title">
                    <h1>{{item.title}}</h3>
                </div>
                <div class="author">
                    <h2>{{item.author}}</h2>
                </div>        
            </div>
            <div class="recipe">
                <div class="ingredients">
                    <h3>Ingredientes<button class="visibility">ESCONDER</button></h3>
                    <ul class="recipes-info" id="ingredients-list ">
                        {% for ingredient in item.ingredients %}
                            <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="steps">
                    <h3>Preparo<button class="visibility">ESCONDER</button></h3>
                    <ul class="recipes-info" id="preparation-steps">
                        {% for step in item.steps %}
                            <li>{{step}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class ="information">
                    {% if item.information %}
                        <h3>Informações<button class="visibility">ESCONDER</button></h3>
                        <div class="recipes-info">
                            <p>{{item.information}}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>

            
        </main>
{% endblock content %}


 