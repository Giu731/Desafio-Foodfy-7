<div class = "item">
    <div>Nome</div>
    <div>    
        <input
            type = "text"
            name = "name"
            value = "{{chef.name}}"
        >
    </div>
</div>
<div class = "item" >
    <div>Avatar</div>
    <div>    
        <div id = "photos-upload-avatar">
            <input
                id = "photos-input"
                type = "file"
                name = "avatar"
                multiple
                accept = "image/*"
                onchange = "AvatarUpload.handleFileInput(event)"
            >
            <div id = "photos-preview-avatar"></div>
            <p>Enviar Avatar</p>
        <div>
    </div>
</div>



