{% extends "admin/layout_admin.njk" %}

{% block head %}
    <title>Chefs - Foodfy</title>
    <link rel="stylesheet" href="/stylefoodfy.css">
{% endblock head %}


{% block content %}
<main>
<h3>Gerenciar chefs</h3>
<section class="chefs_admin">
    {% for chef in chefs %}
        <div class="chef_admin" id="{{item.id}}">
            <span>
                <div class="fotoChef">
                    <img src="{{chef.avatar_url}}" alt="foto do chef:{{chef.name}}">
                </div>
            </span>
            <span>
                <div class="nomeChef">
                    <h3>{{chef.name}}</h3>
                </div>
                <a href = "/admin/chefs/{{chef.id}}">Visualizar</a>
            </span>
        </div>
    {% endfor %}
</section>
    
</main>
{% endblock content %}


 