<div class = "item">
    <div>Imagem da receita</div>
    <div class = "photos-grid">    
        <div id="photos-upload">
            <input
                id = "photos-input"
                type = "file"
                name = "photos"
                multiple
                accept = "image/*"
                onchange = "PhotosUpload.handleFileInput(event)"
            >
            <i class="material-icons">add</i>
        </div>
        <div id = "photos-preview">
        </div>
    </div>
</div>
<div class = "item">
    <div>Nome da receita</div>
    <div>    
        <input
            type = "text"
            name = "title"
            value = "{{recipe.title}}"
        >
    </div>
</div>
<div class = "item">
    <div>Chef</div>
    <div>    
        <select name = "chef">
            {% if recipe.chef_id %}
                {% for chef in chefOptions %}
                <option value = "{{chef.id}}"
                    {% if recipe.chef_id == chef.id %} selected 
                    {% endif %}>
                    {{chef.name}}
                </option>
                {% endfor %}
            {% else %}
                <option class = "placeholder">
                    Selecione um chef
                </option>
                {% for chef in chefOptions %}
                <option value = "{{chef.id}}"
                    {% if recipe.chef_id == chef.id %} selected 
                    {% endif %}>
                    {{chef.name}}
                </option>
                {% endfor %}
            {% endif %}
           
        </select>
    </div>
</div>
<div class = "item" >
    <div>Ingredientes</div>
    <div id = "ingredients">
    {% if recipe.ingredients %}
        {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input 
                type="text[]"
                name="ingredients[]" 
                value= "{{ingredient}}"
            >
        </div>
        {% endfor %}

    {% else %}
        <div class="ingredient">
            <input 
                type="text[]"
                name="ingredients[]" 
                value= "{{ingredient}}"
            >
        </div>
    {% endif %}
    
    </div>
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>
<div class = "item" >
    <div>Modo de preparo</div>
    <div id = "steps">
    {% if recipe.preparation %}
    {% for preparation in recipe.preparation %}
        <div class="step">
            <input 
                type="text[]"
                name="preparation[]" 
                value="{{preparation}}" 
            >
        </div>
    {% endfor %}
    {% else %}
        <div class="step">
            <input 
                type="text[]"
                name="preparation[]" 
                value="{{preparation}}" 
            >
        </div>
    {% endif %}
    </div>
    <button type="button" class="add-step">Adicionar novo passo</button>
</div>
<div class = "item" id = "information">
    <div>Infomações adicionais</div>
    <div>    
        <textarea name = "information">{{recipe.information}}</textarea>

    </div>
</div>
